{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",  // Changed from "commonjs" to "es2022"
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"  // Add this line for better module resolution
  }
}